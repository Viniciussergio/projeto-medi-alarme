<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tela.ForgotPasswordActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="Esqueceu sua senha?"
        android:textColor="@color/colorBackground"
        android:layout_marginTop="15dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Não tem problema. \nDigite abaixo o seu email que enviaremos para lá sua nova senha"
        android:textSize="25dp"
        android:layout_marginTop= "15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:id="@+id/edit_text_esqueci_senha_email"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@color/colorTeste2"
        android:textSize ="22dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btn_nova_senha"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Ok"
        android:textSize="25dp"
        android:background="@color/colorAccent"/>
</LinearLayout>