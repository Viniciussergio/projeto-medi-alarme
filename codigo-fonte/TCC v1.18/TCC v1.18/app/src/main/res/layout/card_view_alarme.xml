<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="3sp"
    app:cardElevation="3sp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        style="@style/ChildLayout"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ChildLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_alarme_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="@string/alarm_time"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/horario_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_alarme_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:padding="10sp"
                android:text="@string/alarm_type"
                android:textColor="@color/colorSecondaryText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_view_alarme_description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:padding="10sp"
                android:text="@string/days_of_week"
                android:textColor="@color/colorSecondaryText"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/button_delete_alarme"
                style="?attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textColor="@color/colorPrimaryText" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>