<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="3sp"
    app:cardElevation="3sp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        style="@style/ChildLayout"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ChildLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_historico_nome_remedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="@string/medicine_name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/horario_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_historico_modo_uso_remedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:padding="10sp"
                android:text="@string/how_to_use"
                android:textColor="@color/colorSecondaryText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_view_historico_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:padding="10sp"
                android:text="@string/alarm_time"
                android:textColor="@color/colorSecondaryText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_view_historico_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:padding="10sp"
                android:text="@string/history_state"
                android:textColor="@color/colorSecondaryText"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>