<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tela.cadastro.detail.ChangePasswordActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"
        android:textAlignment="center"/>

        <TextView
            android:id="@+id/text_view_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/actual_password"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"
        android:textAlignment="center"/>

    <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayout">
    <EditText
        android:id="@+id/edit_text_senha_atual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/edit_text_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_password"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"
        android:textAlignment="center"/>

    <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayout">
    <EditText
        android:id="@+id/edit_text_nova_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:longClickable="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_password"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"
        android:textAlignment="center"
        android:longClickable="false"/>

    <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayout">
    <EditText
        android:id="@+id/edit_text_confirmar_nova_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_trocar_senha"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="@dimen/button_padding"
        android:textColor="@color/colorLight"
        android:text="@string/change_password"
        android:layout_gravity="center"
        android:gravity="center" />

</LinearLayout>